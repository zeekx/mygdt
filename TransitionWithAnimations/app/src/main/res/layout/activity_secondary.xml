<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/redBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_margin="32dp"
        android:tint="@android:color/holo_red_light"
        android:src="@drawable/ic_play_circle"
        android:layout_alignEnd="@id/anchor"
        android:layout_alignBottom="@id/anchor"/>

    <ImageView
        android:id="@+id/blueBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_margin="32dp"
        android:tint="@android:color/holo_blue_dark"
        android:src="@drawable/ic_power_input"
        android:layout_alignEnd="@id/anchor"
        android:layout_alignTop="@id/anchor"
        android:transitionName="switchBlue"/>

    <View
        android:id="@+id/anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/androidBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_margin="32dp"
        android:tint="@android:color/holo_orange_light"
        android:src="@drawable/ic_android"
        android:layout_alignStart="@id/anchor"
        android:layout_alignBottom="@id/anchor"
        android:transitionName="switchAndroid"/>

    <ImageView
        android:id="@+id/yellowBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_margin="32dp"
        android:tint="@android:color/holo_orange_light"
        android:src="@drawable/ic_receipt"
        android:layout_alignStart="@id/anchor"
        android:layout_alignTop="@id/anchor" />

</RelativeLayout>